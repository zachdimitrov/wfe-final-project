<h1 id="form-page-heading">Register new member</h1>
<div id="main-content">
    <div id="main-content-shadow"></div>
    <div id="form-route-line">
        <a href="#/">Home </a><span> / Sign up</span>
    </div>
    <section id="form-field">
        <div class="pure-form pure-form-aligned">
            <fieldset>
                <div class="pure-control-group">
                    <label for="tb-reg-username">Username:</label>
                    <input type="text" placeholder="username" id="tb-reg-username" />
                </div>
                <div class="pure-control-group">
                    <label for="tb-reg-pass">Password:</label>
                    <input type="password" placeholder="password" id="tb-reg-pass" />
                </div>
                <div class="pure-control-group">
                    <label for="tb-reg-mail">E-mail address:</label>
                    <input type="email" placeholder="e-mail" id="tb-reg-mail" />
                </div>
                <button class="pure-button pure-button-active" id="btn-send-signup">Sign up</button>
            </fieldset>
        </div>
    </section>
</div>